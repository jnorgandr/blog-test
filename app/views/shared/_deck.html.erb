<div class="row">
    <div class="col-sm-12">
        <div class="card-deck">
        <% @posts.each do |post| %>
        <div class="card">
            <%= image_tag post.image_url, class:"card-img-top"%>
            <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            <h5 class="card-title">Posted: <%= time_ago_in_words(post.created_at)%> ago</h5>
            <h5 class="card-title">Content: <%= post.content %></h5>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </div>
        <% end %>
        </div>
    </div>
</div>